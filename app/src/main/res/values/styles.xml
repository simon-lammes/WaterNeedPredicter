<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="boldCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="justification" parent="TextAppearance.AppCompat">
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="height" parent="TextAppearance.AppCompat">
        <item name="android:height">32dp</item>
    </style>

</resources>
